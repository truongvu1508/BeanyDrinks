<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activity.thong_tin_nhom">

    <!-- Hàng chứa nút Back -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Nút Back (ImageButton) -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:contentDescription="Quay lại"
            android:src="@android:drawable/ic_menu_revert" />
    </LinearLayout>

    <!-- Tiêu đề Nhóm 5 -->
    <TextView
        android:id="@+id/group_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Nhóm 5"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Tên đề tài -->
    <TextView
        android:id="@+id/project_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="Đề tài: Ứng dụng quản lí cửa hàng đồ uống"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="italic" />

    <!-- Thông tin sinh viên 1 -->
    <TextView
        android:id="@+id/student_1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:text="Tên: Nguyễn Trường Vũ"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/student_1_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:text="Mã sinh viên: 22115053122250"
        android:textColor="#000000"
        android:textSize="18sp" />

    <!-- Thông tin sinh viên 2 -->
    <TextView
        android:id="@+id/student_2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:text="Tên: Đỗ Thành Bảo"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/student_2_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:text="Mã sinh viên: 22115053122202"
        android:textColor="#000000"
        android:textSize="18sp" />

    <!-- Thông tin sinh viên 3 -->
    <TextView
        android:id="@+id/student_3_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:text="Tên: Lê Quang Mạnh Hùng"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/student_3_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Mã sinh viên: 22115053122216"
        android:textColor="#000000"
        android:textSize="18sp" />

</LinearLayout>
