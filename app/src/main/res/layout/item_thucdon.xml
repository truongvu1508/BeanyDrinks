<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/image_button_border">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="98dp"
        android:layout_height="130dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/__ca_phe_sua_1586320543_3124" />

    <LinearLayout
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/imageView3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Cà phê sữa"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_GiaTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22.000 VND"
            android:layout_marginLeft="40dp"
            android:textSize="24sp"
            android:textColor="@color/black" />

        <!-- LinearLayout for horizontal arrangement of ImageButtons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="20dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:contentDescription="Chỉnh sửa"
                android:scaleType="fitCenter"
                android:src="@drawable/_64599" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:contentDescription="Xóa"
                android:scaleType="fitCenter"
                android:src="@drawable/_861362" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
