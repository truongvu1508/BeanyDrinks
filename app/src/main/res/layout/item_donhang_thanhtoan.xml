<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/image_button_border"
    android:paddingLeft="10dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/image_mon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/anh_cafe_den_40" />

    <LinearLayout
        android:id="@+id/linear_donhang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/image_mon"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cafe đen"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_soluong"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#C3C3C3"
            android:gravity="center"
            android:text="04"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/text_sotien"
            android:textColor="@color/orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="396.000 VNĐ" />

    </LinearLayout>

</RelativeLayout>
