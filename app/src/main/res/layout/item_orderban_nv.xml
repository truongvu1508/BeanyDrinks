<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:background="@drawable/image_button_border"
    android:paddingLeft="10dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/image_mon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/anh_cafe_den_40" />

    <LinearLayout
        android:id="@+id/linear_donhang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/image_mon"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:orientation="vertical">

            <TextView
                android:id="@+id/text_TenMon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Cà phê" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_SoTien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:text="22.000 VNĐ" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"

                android:gravity="center">

                <ImageButton
                    android:id="@+id/imageButton_minus"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/button_minussl"
                    app:srcCompat="@drawable/ic_horizontal_rule_24" />

                <TextView
                    android:id="@+id/text_soluong"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@color/grey"
                    android:gravity="center"
                    android:text="04"
                    android:textStyle="bold"
                    android:textColor="@color/red" />

                <ImageButton
                    android:id="@+id/imageButton_add"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/button_addsl"
                    app:srcCompat="@drawable/ic_add_24" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
